---
import Layout from "../../layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

// Shadcn components
import { Card, CardContent } from '@/components/ui/card';
import { Button } from '@/components/ui/button';

// Static paths
export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

// Props
const { project } = Astro.props as { project: CollectionEntry<"projects"> };
const { Content } = await project.render();

const base = import.meta.env.BASE_URL;
---

<Layout title={project.data.title} description={project.data.description}>
<main class="min-h-screen w-full overflow-x-hidden px-4 sm:px-6 md:px-8 pb-16">
  
  <!-- Breadcrumb Navigation -->
  <div class="w-full max-w-5xl mx-auto pt-8 pb-4">
    <nav class="flex items-center gap-2 text-sm text-muted-foreground">
      <a href={`${base}`} class="hover:text-foreground transition-colors">Home</a>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <a href={`${base}projects`} class="hover:text-foreground transition-colors">Projects</a>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-foreground">{project.data.title}</span>
    </nav>
  </div>

  <!-- Hero Image -->
  {project.data.cover && (
    <div class="w-full max-w-5xl mx-auto mb-10">
      <div class="w-full h-64 sm:h-80 overflow-hidden rounded-2xl shadow-2xl border border-border">
        <img src={`${base}${project.data.cover}`} alt={project.data.title} class="w-full h-full object-cover"/>
      </div>
    </div>
  )}

  <!-- Content + Sidebar -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-5xl mx-auto">

    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">

      <!-- Project Header -->
      <div class="space-y-4">
        {project.data.tags && project.data.tags.length > 0 && (
          <div class="flex flex-wrap gap-2">
            {project.data.tags.map(tag => (
              <span class="bg-primary/10 text-primary border border-primary/20 px-4 py-1.5 rounded-full text-sm font-medium">
                {tag}
              </span>
            ))}
          </div>
        )}
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight bg-gradient-to-br from-foreground to-foreground/70 bg-clip-text text-transparent">
          {project.data.title}
        </h1>
        {project.data.description && (
          <p class="text-lg sm:text-xl text-muted-foreground leading-relaxed">{project.data.description}</p>
        )}
      </div>

      <!-- Article Content -->
      <Card class="border-2">
        <CardContent>
          <article class="prose prose-gray dark:prose-invert max-w-full pt-4">
            <Content />
          </article>
        </CardContent>
      </Card>
    </div>

    <!-- Sidebar -->
    <div class="lg:col-span-1 space-y-6">
      <div class="lg:sticky lg:top-8 space-y-6">
        { (project.data.tech || project.data.github || project.data.demo || project.data.date) && (
          <Card class="border-2 shadow-lg">
            <CardContent>
              <h3 class="font-bold text-xl mb-6 pb-3 border-b border-border pt-2">Project Details</h3>
              <div class="space-y-5">

                {project.data.date && (
                  <div class="flex items-start gap-3">
                    <div class="bg-primary/10 p-2.5 rounded-lg mt-0.5">
                      <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <div class="text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-1">Date</div>
                      <div class="text-sm font-medium text-foreground">{project.data.date}</div>
                    </div>
                  </div>
                )}

                {project.data.tech && (
                  <div class="flex items-start gap-3">
                    <div class="bg-primary/10 p-2.5 rounded-lg mt-0.5">
                      <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                      </svg>
                    </div>
                    <div class="flex-1">
                      <div class="text-xs font-semibold uppercase tracking-wider text-muted-foreground mb-1">Technology</div>
                      <div class="text-sm font-medium text-foreground">{project.data.tech}</div>
                    </div>
                  </div>
                )}
              </div>

              <!-- Buttons -->
              <div class="mt-8 space-y-3">
                {project.data.github && (
                  <Button asChild class="w-full">
                    <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="flex justify-center items-center gap-2">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                      Source Code
                    </a>
                  </Button>
                )}
                {project.data.demo && (
                  <Button variant="secondary" asChild class="w-full">
                    <a href={project.data.demo} target="_blank" rel="noopener noreferrer" class="flex justify-center items-center gap-2">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                      </svg>
                      Live Demo
                    </a>
                  </Button>
                )}
              </div>
            </CardContent>
          </Card>
        )}

        <!-- Back Button Card -->
        <Card class="border-2 bg-muted/50">
          <CardContent>
            <a href={`${base}projects`} class="flex items-center justify-center gap-2 py-3 text-foreground hover:text-primary transition-colors font-medium group">
              <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
              Back to Projects
            </a>
          </CardContent>
        </Card>
      </div>
    </div>
  </div>
</main>
</Layout>
