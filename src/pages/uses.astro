---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import { Card, CardContent } from "@/components/ui/card";

const categories = [
  {
    title: "üíª Development Tools",
    items: [
      { name: "VS Code", description: "Primary code editor with custom themes and extensions" },
      { name: "iTerm2 / Windows Terminal", description: "Terminal emulator with oh-my-zsh" },
      { name: "Git", description: "Version control system" },
      { name: "Docker", description: "Containerization platform" },
      { name: "Postman", description: "API testing and development" }
    ]
  },
  {
    title: "üêç Python Stack",
    items: [
      { name: "Python 3.11+", description: "Primary programming language" },
      { name: "Pandas & NumPy", description: "Data manipulation and analysis" },
      { name: "Scikit-learn", description: "Machine learning library" },
      { name: "XGBoost / LightGBM", description: "Gradient boosting frameworks" },
      { name: "Jupyter Notebooks", description: "Interactive development environment" },
      { name: "Poetry", description: "Dependency management" }
    ]
  },
  {
    title: "üìä Data & Analytics",
    items: [
      { name: "DuckDB", description: "Embedded analytical database" },
      { name: "PostgreSQL", description: "Primary database" },
      { name: "Tableau", description: "Data visualization and dashboards" },
      { name: "Apache Airflow", description: "Workflow orchestration" },
      { name: "dbt", description: "Data transformation tool" }
    ]
  },
  {
    title: "üõ†Ô∏è DevOps & Cloud",
    items: [
      { name: "AWS (S3, EC2, Lambda)", description: "Cloud infrastructure" },
      { name: "GitHub Actions", description: "CI/CD pipelines" },
      { name: "Linux/Ubuntu", description: "Development and production environment" }
    ]
  },
  {
    title: "üé® Design & Productivity",
    items: [
      { name: "Figma", description: "UI/UX design and prototyping" },
      { name: "Notion", description: "Note-taking and project management" },
      { name: "Obsidian", description: "Personal knowledge base" },
      { name: "Raycast / Alfred", description: "Productivity launcher" }
    ]
  },
  {
    title: "‚öôÔ∏è Hardware",
    items: [
      { name: "MacBook Pro / Custom PC", description: "Primary development machine" },
      { name: "Mechanical Keyboard", description: "For comfortable typing" },
      { name: "Dual Monitor Setup", description: "Extended workspace" },
      { name: "Logitech MX Master", description: "Wireless mouse" }
    ]
  }
];
---

<Layout title="Uses - Ouassil Dahimene" description="Tools, software, and hardware I use for development and data analysis">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-primary/5 via-background to-background border-b border-border">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20 sm:py-28">
        <div class="text-center space-y-6">
          <div class="inline-block">
            <div class="bg-gradient-to-r from-primary/20 to-primary/10 border border-primary/30 px-4 py-2 rounded-full text-sm font-semibold text-primary mb-4">
              üõ†Ô∏è Tools & Setup
            </div>
          </div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight">
            <span class="bg-gradient-to-r from-foreground via-foreground/90 to-foreground/70 bg-clip-text text-transparent">
              What I Use
            </span>
          </h1>
          <p class="text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
            A comprehensive list of the tools, software, and hardware that power my workflow
          </p>
        </div>

        <!-- Breadcrumb -->
        <div class="mt-12">
          <nav class="flex items-center justify-center gap-2 text-sm text-muted-foreground">
            <a href="/" class="hover:text-foreground transition-colors">Home</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            <span class="text-foreground">Uses</span>
          </nav>
        </div>
      </div>
    </section>

    <!-- Content Section -->
    <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-20">
      <div class="space-y-12">
        {categories.map((category) => (
          <div>
            <h2 class="text-3xl font-bold mb-6 text-foreground">{category.title}</h2>
            <div class="grid gap-4 grid-cols-1 md:grid-cols-2">
              {category.items.map((item) => (
                <Card class="border-2 hover:border-primary/50 hover:shadow-lg transition-all">
                  <CardContent>
                    <h3 class="font-bold text-lg text-foreground mb-2">{item.name}</h3>
                    <p class="text-sm text-muted-foreground">{item.description}</p>
                  </CardContent>
                </Card>
              ))}
            </div>
          </div>
        ))}
      </div>

      <!-- Note Section -->
      <div class="mt-16 p-6 bg-muted/50 border-2 border-border rounded-xl">
        <div class="flex gap-4">
          <svg class="w-6 h-6 text-primary flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
          <div>
            <h3 class="font-bold text-foreground mb-2">This list evolves</h3>
            <p class="text-muted-foreground text-sm leading-relaxed">
              I'm constantly trying new tools and refining my setup. This page represents my current preferences,
              but I'm always open to discovering better solutions. Last updated: {new Date().toLocaleDateString('en-US', { month: 'long', year: 'numeric' })}.
            </p>
          </div>
        </div>
      </div>

      <!-- Back Button -->
      <div class="mt-12 text-center">
        <a href="/" class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-secondary-foreground rounded-lg hover:bg-secondary/80 transition-all font-medium border-2 border-border group">
          <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
