---
interface Stat {
  label: string;
  value: string;
}

interface About {
  name: string;
  bio: string;
  image: string;
  stats: Stat[];
}

interface Props {
  about: About;
}

const { about } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
  <!-- Image Side -->
  <div class="relative">
    <div class="relative rounded-2xl overflow-hidden shadow-2xl border-4 border-primary/20 aspect-square max-w-md mx-auto">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-transparent z-10"></div>
      <img
        src={`${base}${about.image.startsWith('/') ? about.image.slice(1) : about.image}`}
        alt={about.name}
        class="w-full h-full object-cover"
        onerror="this.src='https://ui-avatars.com/api/?name=Ouassil+Dahimene&size=500&background=random&bold=true'"
      />
    </div>
    <!-- Floating badge -->
    <div class="absolute -bottom-6 left-1/2 -translate-x-1/2 bg-card border-2 border-border px-6 py-3 rounded-full shadow-xl">
      <p class="text-sm font-bold text-primary">Available for opportunities</p>
    </div>
  </div>

  <!-- Content Side -->
  <div class="space-y-6">
    <div>
      <h3 class="text-3xl sm:text-4xl font-bold mb-4 text-foreground">About Me</h3>
      <p class="text-lg text-muted-foreground leading-relaxed">
        {about.bio}
      </p>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-2 gap-4 pt-4">
      {about.stats.map((stat: Stat) => (
        <div class="bg-card border-2 border-border rounded-xl p-6 text-center hover:border-primary/50 transition-colors">
          <div class="text-3xl sm:text-4xl font-extrabold text-primary mb-2">
            {stat.value}
          </div>
          <div class="text-sm text-muted-foreground font-medium">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <!-- Download Resume Button -->
    <div class="pt-4">
      <a
        href={`${base}resume.pdf`}
        download
        class="inline-flex items-center gap-2 px-6 py-3 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-all font-medium shadow-lg hover:shadow-xl hover:-translate-y-0.5"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
        </svg>
        Download Resume
      </a>
    </div>
  </div>
</div>
