const quickLinks = [
  { name: "About", href: "#about" },
  { name: "Projects", href: "#projects" },
  { name: "Skills", href: "#skills" },
  { name: "Experience", href: "#experience" },
  { name: "Contact", href: "#contact" }
];
---

<footer class="bg-muted/30 border-t border-border mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">

      <!-- Brand Column -->
      <div class="space-y-4">
        <h3 class="text-2xl font-bold bg-gradient-to-r from-foreground to-foreground/70 bg-clip-text text-transparent">
          Ouassil Dahimene
        </h3>
        <p class="text-muted-foreground text-sm">
          Python Developer specializing in web scraping, ETL pipelines, workflow automation, data analysis, and machine learning. Turning data into results.
        </p>
      </div>

      <!-- Quick Links Column -->
      <div>
        <h4 class="font-semibold text-foreground mb-4">Quick Links</h4>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.href} class="text-muted-foreground hover:text-primary transition-colors text-sm">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Social Links Column -->
      <div>
        <h4 class="font-semibold text-foreground mb-4">Connect</h4>
        <div class="flex gap-4">
          {socialLinks.map(social => (
            <a
              href={social.url}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-card border-2 border-border p-3 rounded-lg hover:border-primary/50 hover:bg-primary/10 transition-all group"
              aria-label={social.name}
            >
              <svg class="w-5 h-5 text-muted-foreground group-hover:text-primary transition-colors" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="pt-8 border-t border-border flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm text-muted-foreground text-center sm:text-left">
        Â© {currentYear} Ouassil Dahimene. All rights reserved.
      </p>
      <div class="flex items-center gap-2 text-xs text-muted-foreground">
        <span>Built with</span>
        <svg class="w-4 h-4 text-red-500" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
        </svg>
        <span>using Astro & Tailwind</span>
      </div>
    </div>
  </div>
</footer>
