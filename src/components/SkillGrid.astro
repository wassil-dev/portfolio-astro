---
import * as icons from "simple-icons";
import type { SimpleIcon } from "simple-icons";

interface Skill {
  name: string;
  icon?: string;
  custom?: string;
}

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<ul class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-3">
  {skills.map((skill: Skill) => {
    const iconData = skill.icon ? icons[skill.icon as keyof typeof icons] as SimpleIcon | undefined : null;
    return (
      <li class="group">
        <div class="flex flex-col items-center justify-center gap-2 p-3 bg-card border-2 border-border rounded-lg hover:border-primary/50 hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
          {iconData && typeof iconData === 'object' && 'path' in iconData ? (
            <svg role="img" viewBox="0 0 24 24" width="32" height="32" fill={`#${iconData.hex}`} class="group-hover:scale-110 transition-transform duration-300">
              <title>{iconData.title}</title>
              <path d={iconData.path} />
            </svg>
          ) : skill.custom ? (
            <img src={`${base}${skill.custom.startsWith('/') ? skill.custom.slice(1) : skill.custom}`} alt={skill.name} width="32" height="32" class="group-hover:scale-110 transition-transform duration-300" />
          ) : null}
          <span class="text-xs font-medium text-center text-foreground">{skill.name}</span>
        </div>
      </li>
    );
  })}
</ul>
