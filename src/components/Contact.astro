---
interface ContactInfo {
  email: string;
  linkedin: string;
  github: string;
  phone: string;
}

interface Props {
  contact: ContactInfo;
}

const { contact } = Astro.props;
---
<section class="mt-12 p-6 border border-border rounded-lg shadow bg-card">
  <ul class="space-y-2">
    <li class="text-foreground"><strong>Email:</strong> <a href={`mailto:${contact.email}`} class="text-primary hover:underline">{contact.email}</a></li>
    <li class="text-foreground"><strong>LinkedIn:</strong> <a href={contact.linkedin} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">{contact.linkedin}</a></li>
    <li class="text-foreground"><strong>GitHub:</strong> <a href={contact.github} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">{contact.github}</a></li>
    <li class="text-foreground"><strong>Phone:</strong> {contact.phone}</li>
  </ul>
</section>
