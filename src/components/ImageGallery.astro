---
import ImageGallery from './ImageGallery';

interface GalleryImage {
  image: string;
  caption?: string;
}

interface Props {
  images?: GalleryImage[];
  title?: string;
}

const { images = [], title = "Screenshots & Gallery" } = Astro.props;

// Don't render if no images
if (!images || images.length === 0) {
  return null;
}
---

<section class="w-full py-8">
  <div class="mb-6">
    <h2 class="text-2xl sm:text-3xl font-bold text-foreground mb-2 flex items-center gap-3">
      <svg class="w-7 h-7 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      {title}
    </h2>
    <p class="text-muted-foreground text-sm">Click on any image to view in fullscreen</p>
  </div>

  <ImageGallery images={images} client:load />
</section>
