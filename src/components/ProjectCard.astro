---
const { title, description = "", tech = [], cover = "", link = "#" } = Astro.props;
---

<a
  href={link}
  class="block p-6 border rounded-xl shadow-sm hover:shadow-lg transition-shadow transform hover:-translate-y-1 duration-300 bg-white dark:bg-gray-800"
>
  {/* Cover image */}
  {cover && (
    <img
      src={cover}
      alt={title}
      class="mb-4 w-full h-48 object-cover rounded-lg transition-transform duration-300 hover:scale-105"
    />
  )}

  {/* Title */}
  <h2 class="text-xl font-bold mb-2">{title}</h2>

  {/* Description */}
  {description && (
    <p class="text-gray-600 text-sm mb-4 line-clamp-3">{description}</p>
  )}

  {/* Tech tags */}
  {tech.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tech.map((t) => (
        <span
          class="bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded"
        >
          {t}
        </span>
      ))}
    </div>
  )}
</a>
