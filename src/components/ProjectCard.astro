---
interface Props {
  title: string;
  description?: string;
  tech?: string[];
  cover?: string;
  link?: string;
}

const { title, description = "", tech = [], cover = "", link = "#" } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<a
  href={link}
  class="block p-6 border border-border rounded-xl shadow-sm hover:shadow-lg transition-shadow duration-300 bg-card hover:bg-accent/50"
>
  {/* Cover image */}
  {cover && (
    <img
      src={`${base}${cover.startsWith('/') ? cover.slice(1) : cover}`}
      alt={title}
      class="mb-4 w-full h-48 object-cover rounded-lg"
    />
  )}

  {/* Title */}
  <h2 class="text-xl font-bold mb-2 text-card-foreground">{title}</h2>

  {/* Description */}
  {description && (
    <p class="text-muted-foreground text-sm mb-4 line-clamp-3">{description}</p>
  )}

  {/* Tech tags */}
  {tech.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tech.map((t: string) => (
        <span
          class="bg-secondary text-secondary-foreground text-xs font-semibold px-2 py-1 rounded"
        >
          {t}
        </span>
      ))}
    </div>
  )}
</a>
